<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BruhMobilApp.View.OrderHasBeenReceived">
    <AbsoluteLayout>
        <Frame AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.9, 0.54" AbsoluteLayout.LayoutFlags="All" BackgroundColor="#008080" CornerRadius="20">
            <StackLayout >
                <Image Source="Klass.png" Margin="0, 50, 0, 0"></Image>
                <Label Text="Посылка доставлена!" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold" FontSize="20"/>

                <Button x:Name="ChooseNewOrderButton" Text="Заказать ещё" CornerRadius="20"
                        Margin="0, 20, 0, 0" Clicked="ChooseNewOrderButton_Clicked"/>
            </StackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>
